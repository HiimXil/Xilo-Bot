generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String @id @default(cuid())
  discordId String @unique
  username  String
  score     Int    @default(0)
  guildId   String @default("")
}

model Question {
  id          Int    @id @default(autoincrement())
  text        String
  answer      String
  description String
}

model Configuration {
  GuildId       String @id
  QuizChannelId String
}
